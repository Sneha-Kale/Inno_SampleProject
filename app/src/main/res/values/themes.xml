<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Inno_SampleProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/purple_500</item>
    </style>

    <style name="textViewPoppins" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="fontFamily">serif-monospace</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewPoppins_Title" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="fontFamily">monospace</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textViewPoppins_SubText" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="fontFamily">monospace</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="buttonDisableAppTheme" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_disable</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ADADAD</item>
        <item name="android:clickable">true</item>
        <item name="fontFamily">@font/poppins_semibold</item>

    </style>

    <style name="buttonAppTheme" parent="Widget.AppCompat.Button">
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_effect</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="fontFamily">@font/poppins_semibold</item>

    </style>

</resources>